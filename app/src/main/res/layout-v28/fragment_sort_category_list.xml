<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/filterFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:name="com.example.demuz.SortFragment"
    tools:context=".FilterChipsFragment"
    tools:listitem="@layout/fragment_sort_category"
    app:layoutManager="LinearLayoutManager">

    <TextView
        android:id="@+id/thisCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/choose_filters"
        android:textFontWeight="700"
        android:textAppearance="?attr/textAppearanceListItem" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryItem"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />

    <com.google.android.material.button.MaterialButton
        android:padding="0dp"
        android:id="@+id/doFilter"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/Do_filter" />
</LinearLayout>